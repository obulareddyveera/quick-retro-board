generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("PLANETSCALE_PRISMA_DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  Board       Board[]
}

model Role {
  id   Int    @id @default(autoincrement())
  name String

  Users Users[]
  @@index([id])
}

model Retros {
  id       Int    @id @default(autoincrement())
  teamName String

  @@index([id])
}

model Users {
  id      Int    @id @default(autoincrement())
  name    String
  email   String
  role    Role?  @relation(fields: [role_id], references: [id])
  role_id Int

  Board Board[]
  @@index([id])
  Thums Thums[]
}

model Board {
  id          Int       @id @default(autoincrement())
  retroId     Int
  commentText String
  category    Category? @relation(fields: [category_id], references: [id])
  category_id Int
  users       Users?    @relation(fields: [user_id], references: [id])
  user_id     Int

  @@index([id])
  Thums Thums[]
}

model Thums {
  id       Int    @id @default(autoincrement())
  board    Board? @relation(fields: [board_id], references: [id])
  board_id Int
  users    Users? @relation(fields: [user_id], references: [id])
  user_id  Int

  @@index([id])
}
