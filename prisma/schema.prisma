generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("PLANETSCALE_PRISMA_DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Category {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  Board       Board[]
}

model Retros {
  id       Int    @id @default(autoincrement())
  teamName String
  passCode String

  Users Users[]
  @@index([id])
}

model Users {
  id        Int     @id @default(autoincrement())
  name      String
  retros    Retros? @relation(fields: [retros_id], references: [id])
  retros_id Int

  Board Board[]
  @@index([id])
}

model Board {
  id          Int       @id @default(autoincrement())
  retroId     Int
  commentText String
  category    Category? @relation(fields: [category_id], references: [id])
  category_id Int
  users       Users?    @relation(fields: [user_id], references: [id])
  user_id     Int

  @@index([id])
}
